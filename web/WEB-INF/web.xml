        <servlet-name>LogoutProcess</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>BlogProcess</servlet-name>
        <servlet-class>code_project.Servlet.BlogProcess</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogProcess</servlet-name>
        <url-pattern>/Blog</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProcess</servlet-name>
        <servlet-class>code_project.Servlet.UpdateProcess</servlet-class>
    </servlet>
